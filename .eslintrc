{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react", "react-hooks", "prettier"
  ],
  "rules": {
    "react/prop-types": "off",
    "class-methods-use-this": "off",
    "react/jsx-props-no-spreading": "off"
  }
}